<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="600" maxWidth="-Infinity" minHeight="600" minWidth="-Infinity"
   prefHeight="600.0" prefWidth="768.0" style="-fx-background-color: #09090b;"
   xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.application.Telas.Livro">
   <top>
      <FlowPane alignment="CENTER_LEFT" orientation="VERTICAL" prefHeight="32.0" prefWidth="200.0"
         style="-fx-background-color: #18181b;" BorderPane.alignment="CENTER">
         <children>
            <FlowPane alignment="CENTER_LEFT" prefWidth="384.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#voltar"
                     style="-fx-background-color: #0000;" text="&lt;- voltar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets left="8.0" />
               </padding>
            </FlowPane>
            <FlowPane alignment="CENTER_RIGHT" prefWidth="384.0">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="LIVROS">
                     <font>
                        <Font name="SansSerif Bold" size="10.0" />
                     </font>
                  </Text>
                  <Button maxWidth="36.0" minWidth="34.0" mnemonicParsing="false" onAction="#close"
                     prefHeight="30.0" prefWidth="34.0"
                     style="-fx-background-radius: 0; -fx-background-color: #ef4444;" text="X"
                     textFill="WHITE">
                     <FlowPane.margin>
                        <Insets left="16.0" />
                     </FlowPane.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </FlowPane>
   </top>
   <left>
      <FlowPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #0001;"
         BorderPane.alignment="CENTER">
         <children>
            <Button alignment="TOP_LEFT" cache="true" contentDisplay="CENTER" depthTest="ENABLE"
               mnemonicParsing="false" onAction="#irParaLivros"
               style="-fx-min-width: 200px; -fx-background-radius: 0; -fx-background-color: #18181b88;"
               text="PESQUISAR" textFill="WHITE">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button alignment="TOP_LEFT" cache="true" contentDisplay="CENTER" depthTest="ENABLE"
               mnemonicParsing="false" onAction="#irParaCriarLivros"
               style="-fx-min-width: 200px; -fx-background-radius: 0; -fx-background-color: #18181b88;"
               text="CRIAR" textFill="WHITE">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </FlowPane>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
         <children>
            <HBox prefHeight="34.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER_LEFT" maxHeight="0.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CRIAR LIVRO"
                           textOrigin="CENTER">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox spacing="8.0">
               <children>
                  <Label text="Titulo*:" textFill="WHITE" />
                  <TextField fx:id="titulo" promptText="O Iluminado"
                     style="-fx-background-radius: 0; -fx-background-color: #18181b88; -fx-text-fill: #fff; -fx-prompt-text-fill: #fff3;">
                     <padding>
                        <Insets bottom="8.0" left="16.0" right="8.0" top="8.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <VBox spacing="8.0">
               <children>
                  <Label text="Autor*:" textFill="WHITE" />
                  <TextField fx:id="autor" promptText="Stephen King"
                     style="-fx-background-radius: 0; -fx-background-color: #18181b88; -fx-text-fill: #fff; -fx-prompt-text-fill: #fff3;">
                     <padding>
                        <Insets bottom="8.0" left="16.0" right="8.0" top="8.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </VBox>
            <HBox spacing="16.0">
               <children>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Ano*:" textFill="WHITE" />
                        <DatePicker fx:id="ano" maxWidth="300.0" promptText="Selecione Uma Data"
                           style="-fx-background-radius: 0; -fx-background-color: #18181b88; -fx-prompt-text-fill: #fff3; -fx-text-fill: #fff; -fx-border-color: transparent;"
                           VBox.vgrow="ALWAYS">
                           <padding>
                              <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
                           </padding>
                        </DatePicker>
                     </children>
                  </VBox>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Genero*:" textFill="WHITE" />
                        <TextField fx:id="genero" promptText="Suspense"
                           style="-fx-background-radius: 0; -fx-background-color: #18181b88; -fx-text-fill: #fff; -fx-prompt-text-fill: #fff3;">
                           <padding>
                              <Insets bottom="8.0" left="16.0" right="8.0" top="8.0" />
                           </padding>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </HBox>
            <VBox spacing="8.0">
               <children>
                  <Label text="Quantidade*:" textFill="WHITE" />
                  <TextField fx:id="quantidade" promptText="100"
                     style="-fx-background-radius: 0; -fx-background-color: #18181b88; -fx-text-fill: #fff; -fx-prompt-text-fill: #fff3;">
                     <padding>
                        <Insets bottom="8.0" left="16.0" right="8.0" top="8.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </VBox>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                           <children>
                              <Text fx:id="mensagemErro" fill="#ef4444" strokeType="OUTSIDE"
                                 strokeWidth="0.0" textAlignment="CENTER" HBox.hgrow="ALWAYS"
                                 VBox.vgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <FlowPane alignment="BOTTOM_RIGHT" columnHalignment="CENTER" hgap="16.0"
                           HBox.hgrow="ALWAYS">
                           <children>
                              <Button alignment="TOP_LEFT" cache="true" contentDisplay="CENTER"
                                 depthTest="ENABLE" mnemonicParsing="false" onAction="#irParaLivros"
                                 style="-fx-background-radius: 0; -fx-background-color: #ef4444;"
                                 text="CANCELAR" textFill="WHITE">
                                 <padding>
                                    <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                 </padding>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                              <Button fx:id="salvarLivroBotao" alignment="TOP_LEFT" cache="true"
                                 contentDisplay="CENTER" depthTest="ENABLE" mnemonicParsing="false"
                                 onAction="#criarLivro"
                                 style="-fx-background-radius: 0; -fx-background-color: #18181b88;"
                                 text="SALVAR" textFill="WHITE">
                                 <padding>
                                    <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                 </padding>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </FlowPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>