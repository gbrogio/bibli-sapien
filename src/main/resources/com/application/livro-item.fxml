            <Button alignment="TOP_LEFT" cache="true" contentDisplay="CENTER" depthTest="ENABLE" mnemonicParsing="false" onAction="#editarLivro" style="-fx-background-radius: 0; -fx-background-color: #18181b88;" text="EDITAR" textFill="WHITE">
