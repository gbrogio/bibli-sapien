<VBox prefHeight="125.0" prefWidth="231.0" style="-fx-background-color: #0002;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.Telas.LivroItem">
  <children>
    <VBox>
      <children>
            <Label fx:id="nomeLivro" prefHeight="21.0" prefWidth="210.0" text="NOME" textFill="WHITE">
